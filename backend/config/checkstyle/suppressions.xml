<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress RightCurlyAlone for empty config classes (Spotless conflict) -->
    <suppress checks="RightCurly"
              files=".*Config\.java$"
              message=".*should be alone on a line.*"/>

    <!-- Suppress RightCurlyAlone for JPA entities with empty constructors (Spotless conflict) -->
    <suppress checks="RightCurly"
              files=".*/domain/.*\.java$"
              message=".*should be alone on a line.*"/>

    <!-- Suppress VariableDeclarationUsageDistance for test files (given-when-then pattern) -->
    <suppress checks="VariableDeclarationUsageDistance"
              files=".*Test\.java$"/>
</suppressions>
